#!/bin/bash

if [ $# -eq 0 ]; then
  echo "Usage: aura-iso-upload [release/aura.iso]"
  exit 1
fi

if [[ ! -f ~/.config/rclone/rclone.conf ]]; then
  echo "You must first configure rclone with the R2 credentials: aura-iso-rclone-config"
  exit 1
fi

rclone copy $1 Aura:aura-iso/ -P

if [[ -f $1.sig ]]; then
  rclone copy $1.sig Aura:aura-iso/ -P
fi
